{
  "compilerOptions": {
    "outDir": "dist/cjs",
    "declaration": false,
    "module": "commonjs",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Bundler mode */
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["lib"]
}
